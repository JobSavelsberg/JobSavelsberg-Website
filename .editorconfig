# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# 4 spaces for indentation, 120 character line length
[*.{js,ts,json,astro,svelte,css,scss,html,md,yml,yaml}]
indent_style = space
indent_size = 4
max_line_length = 80

# 2 spaces for package.json and other config files (but not .prettierrc)
[{package.json,*.yml,*.yaml}]
indent_size = 2

# Markdown files can have trailing whitespace for line breaks
[*.md]
trim_trailing_whitespace = false
