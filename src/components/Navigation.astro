---
import ThemeIcon from "./ThemeIcon.astro";

// Get the current pathname to determine active page
const currentPath = Astro.url.pathname;
---

<header class="nav-container">
    <a class="home" href="/"> Job Savelsberg </a>
    <div class="nav-links">
        <a class={`photography ${currentPath === "/photography" ? "active" : ""}`} href="/photography">Photography</a>
        <a class={`music ${currentPath === "/music" ? "active" : ""}`} href="/music">Music</a>
        <a class={`software ${currentPath === "/software" ? "active" : ""}`} href="/software">Software</a>
    </div>
    <ThemeIcon />
</header>
<style>
    .home {
        font-size: 1.5rem;
        font-weight: bold;
        text-decoration: none;
        color: inherit;
    }
    .nav-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: var(--color-background);
        margin-inline: auto;
        max-inline-size: var(--max-width-centered);
        width: 100%;
    }
    .nav-links {
        display: flex;
        gap: 0.5rem;
    }
    .nav-links a {
        text-decoration: none;
        color: var(--color-text);
        font-weight: 500;
        padding: 0.5rem;
        transition:
            opacity 0.2s ease,
            text-decoration 0.2s ease;
        font-size: 0.95rem;
        opacity: 0.7;
    }
    .nav-links a:hover {
        opacity: 1;
        text-decoration: underline;
        text-underline-offset: 4px;
    }
    .nav-links a.active {
        opacity: 1;
        font-weight: 500;
        text-decoration: underline;
        text-underline-offset: 4px;
        text-decoration-thickness: 2px;
    }
</style>
