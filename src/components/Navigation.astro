---
import ThemeIcon from "./ThemeIcon.astro";

// Get the current pathname to determine active page
const currentPath = Astro.url.pathname;
// Remove trailing slash for consistent matching
const normalizedPath = currentPath.endsWith("/") && currentPath !== "/" ? currentPath.slice(0, -1) : currentPath;
---

<header class="nav-container">
    <a class={`home ${normalizedPath === "/" ? "active" : ""}`} href="/">
        <span class="home-full">Job Savelsberg</span>
        <span class="home-short">JS</span>
    </a>
    <div class="nav-links">
        <a class={`photography ${normalizedPath === "/photography" ? "active" : ""}`} href="/photography">Photography</a
        >
        <a class={`music ${normalizedPath === "/music" ? "active" : ""}`} href="/music">Music</a>
        <a class={`software ${normalizedPath === "/software" ? "active" : ""}`} href="/software">Software</a>
    </div>
    <ThemeIcon />
</header>
<style>
    .home {
        font-size: 1.5rem;
        font-weight: bold;
        text-decoration: none;
        color: inherit;
    }

    .nav-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: var(--color-background);
        margin-inline: auto;
        max-inline-size: var(--max-width-centered);
        width: 100%;
    }
    .nav-links {
        display: flex;
        gap: 0.5rem;
    }
    .nav-links a {
        text-decoration: none;
        color: var(--color-text);
        font-weight: 500;
        padding: 0.5rem;
        transition:
            opacity 0.2s ease,
            text-decoration 0.2s ease;
        font-size: 0.95rem;
        opacity: 0.7;
    }
    .nav-links a:hover {
        opacity: 1;
        text-decoration: underline;
        text-underline-offset: 4px;
    }
    .nav-links a.active {
        opacity: 1;
        font-weight: 500;
        text-decoration: underline;
        text-underline-offset: 4px;
        text-decoration-thickness: 2px;
    }

    /* Ensure active state takes precedence on mobile */
    .nav-links a.active:hover {
        text-decoration-thickness: 2px;
    }

    /* Better mobile touch handling */
    @media (hover: none) and (pointer: coarse) {
        .nav-links a:hover {
            opacity: 0.7;
            text-decoration: none;
        }
        .nav-links a.active {
            opacity: 1;
            text-decoration: underline;
            text-decoration-thickness: 2px;
        }
    }

    /* Responsive home link text */
    .home-short {
        display: none;
    }

    .home-full {
        display: inline;
    }

    @media (max-width: 640px) {
        .home-full {
            display: none !important;
        }
        .home-short {
            display: inline !important;
        }
    }

    /* Additional mobile-first approach for better reliability */
    @media screen and (max-width: 640px) {
        .home-full {
            visibility: hidden;
            position: absolute;
            width: 0;
            height: 0;
            overflow: hidden;
        }
        .home-short {
            visibility: visible;
            position: static;
        }
    }
</style>
